@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>


<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (TodoService == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Text</th>
                <th>Done</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var todo in Todos)
            {
                <tr>
                    <td>@todo.Text</td>
                    <td>@todo.Done</td>
                    <td><button class="btn btn-primary">Action</button></td>
                </tr>
            }
        </tbody>
    </table>
}


